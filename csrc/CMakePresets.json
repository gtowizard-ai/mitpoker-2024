{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "unix-makefiles",
      "inherits": "default",
      "generator": "Unix Makefiles"
    },
    {
      "name": "build-pokerbot",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF",
        "IS_BUILDING_BOT": "ON"
      }
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": { "outputOnFailure": true }
    }
  ]
}
